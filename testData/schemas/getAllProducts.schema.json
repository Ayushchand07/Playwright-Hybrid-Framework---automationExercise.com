{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Get All Products Response",
  "type": "object",
  "properties": {
    "responseCode": {
      "type": "integer"
    },
    "products": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          },
          "price": {
            "type": "string",
            "pattern": "^Rs\\.\\s?\\d+$"
          },
          "brand": {
            "type": "string"
          },
          "category": {
            "type": "object",
            "properties": {
              "usertype": {
                "type": "object",
                "properties": {
                  "usertype": {
                    "type": "string",
                    "enum": ["Women", "Men", "Kids"]
                  }
                },
                "required": ["usertype"]
              },
              "category": {
                "type": "string"
              }
            },
            "required": ["usertype", "category"]
          }
        },
        "required": ["id", "name", "price", "brand", "category"]
      }
    }
  },
  "required": ["responseCode", "products"]
}
